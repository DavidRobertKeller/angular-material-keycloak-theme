{
  "name": "angular-material-keycloak-theme",
  "version": "0.0.0",
  "kcThemeName": "mail-theme",
  "bdir": "./dist/angular-material-keycloak-theme/",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod  --base-href \"${url.resourcesPath}/\"",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "echoBdir": "cross-var echo bdir is $npm_package_bdir",
    "postbuild": "npm run echoBdir && npm run createThemeDirs && npm run buildLoginFTLPage && npm run copyRessources",
    "createThemeDirs": "npm run createAccountDir && npm run createAdminDir && npm run createLoginDir && npm run createWelcomeDir",
    "createAccountDir": "cross-var mkdirp $npm_package_bdir/$npm_package_kcThemeName/account",
    "createAdminDir": "cross-var mkdirp $npm_package_bdir/$npm_package_kcThemeName/admin",
    "createLoginDir": "cross-var mkdirp $npm_package_bdir/$npm_package_kcThemeName/login/resources",
    "createWelcomeDir": "cross-var mkdirp $npm_package_bdir/$npm_package_kcThemeName/welcome",
    "buildLoginFTLPage": "cross-var cp $npm_package_bdir/index.html $npm_package_bdir/$npm_package_kcThemeName/login/login.ftl",
    "copyRessources": "npm run copyRessourcesCss && npm run copyRessourcesJs && npm run copyRessourcesTxt && npm run copyRessourcesIco",
    "copyRessourcesCss": "cross-var cp $npm_package_bdir/*.css $npm_package_bdir/$npm_package_kcThemeName/login/resources",
    "copyRessourcesJs": "cross-var cp $npm_package_bdir/*.js $npm_package_bdir/$npm_package_kcThemeName/login/resources",
    "copyRessourcesTxt": "cross-var cp $npm_package_bdir/*.txt $npm_package_bdir/$npm_package_kcThemeName/login/resources",
    "copyRessourcesIco": "cross-var cp $npm_package_bdir/*.ico $npm_package_bdir/$npm_package_kcThemeName/login/resources"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~21.1.4",
    "@angular/cdk": "~21.1.4",
    "@angular/common": "~21.1.4",
    "@angular/compiler": "~21.1.4",
    "@angular/core": "~21.1.4",
    "@angular/forms": "~21.1.4",
    "@angular/material": "~21.1.4",
    "@angular/platform-browser": "~21.1.4",
    "@angular/platform-browser-dynamic": "~21.1.4",
    "@angular/router": "~21.1.4",
    "copyfiles": "^2.4.1",
    "cross-var": "^1.1.0",
    "mkdirp": "^3.0.1",
    "replace": "^1.2.2",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.16.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~21.1.4",
    "@angular/cli": "~21.1.4",
    "@angular/compiler-cli": "~21.1.4",
    "@angular/language-service": "~21.1.4",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.0.0",
    "jasmine-core": "~5.1.0",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ts-node": "~10.9.0",
    "typescript": "~5.9.0"
  }
}
